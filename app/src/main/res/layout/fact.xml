<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:id="@+id/factImage"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/half"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fact Title"
        android:textSize="25dp"
        android:background="@null"
        android:textAlignment="center"
        android:layout_below="@id/factImage"
        android:id="@+id/factTitle"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/factTitle"
        android:textSize="15dp"
        android:textAlignment="center"
        android:id="@+id/factdiscript"
        android:text="Fact Discription"/>


</RelativeLayout>